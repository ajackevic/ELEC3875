function cipherBlockOutput = user_input_decrypt()
    % Setting the dialog box parameters
    dlgTask = "Enter cipher:";
    dlgTitle = "Decryption dialog";
    dlgDim = [20 100];

    % Request user input from dialog box and then format it in to
    % two byte hex string array
    userInput = inputdlg(dlgTask, dlgTitle, dlgDim);
    cipherArray = AES_format(char(userInput));

    % Reshape the string array to a 16 block matrix
    if length(cipherArray) == 16
        cipherBlockOutput = cipherArray;
    else
        cipherBlockOutput = reshape(cipherArray,16, length(cipherArray)/16);
    end
end
